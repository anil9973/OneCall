{
	"manifest_version": 3,
	"minimum_chrome_version": "140",
	"offline_enabled": true,
	"name": "OneCall - Universal AI Support",
	"short_name": "OneCall",
	"description": "Voice-controlled AI assistant for any website. One call solves it all.",
	"version": "0.0.1",
	"author": "Brahmastra Techeq",
	"icons": {
		"128": "assets/icon-128.png",
		"16": "assets/icon.png"
	},

	"action": {
		"default_title": "OneCall"
	},

	"options_page": "options/index.html",

	"background": {
		"service_worker": "background/service-worker.js",
		"type": "module"
	},

	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+M",
				"windows": "Alt+M",
				"mac": "Alt+M",
				"linux": "Alt+M"
			}
		}
	},

	"web_accessible_resources": [
		{
			"resources": ["scripts/*", "lib/*", "shared/*"],
			"matches": ["<all_urls>"]
		}
	],

	"permissions": ["activeTab", "offscreen", "scripting", "storage", "webNavigation"],
	"host_permissions": ["<all_urls>"]
}
